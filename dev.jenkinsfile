pipeline {
    agent any

    options { skipDefaultCheckout() }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'composer install'
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'composer test'
            }
        }
        stage('Updating and pushing changes') {
            steps {
                sh '''
                cpath=/var/lib/jenkins/workspace/routing-component/dev/composer.json
                chpath=/var/lib/jenkins/workspace/routing-component/dev/CHANGELOG.md
                rpath=/var/lib/jenkins/workspace/routing-component/dev/README.md
                curl -s https://pkg.dannyxcii.co.uk/scripts/composer-updater.sh | bash -s -- "$cpath" "$chpath" "$rpath" dev
                '''
            }
        }
    }
}